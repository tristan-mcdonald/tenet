/**
  * Breakpoint settings. the commented scale below is to help you to visualise this. Documentation
  * can be found here: https://github.com/jescalan/rupture
  */
rupture.anti-overlap   = true // @stylint ignore
rupture.base-font-size = 1rem // @stylint ignore

/**
  * The below is set to false as you will otherwise likely run into errors due to em-unit
  * breakpoints clashing with the complex root font-size value.
  */
rupture.enable-em-breakpoints = false // @stylint ignore
rupture.scale                 = 0 480px 580px 680px 780px 880px 980px 1080px 1180px 1280px 1380px 1480px 1580px 1680px 1780px 1880px // @stylint ignore
