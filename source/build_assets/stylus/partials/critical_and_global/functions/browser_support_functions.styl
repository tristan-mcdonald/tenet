/*
    provides the vertical height of the fourth step in the font-size scale.
    used for the margin-top of heading level one by default.
*/
sp-scale--four()
    margin-top ($fz--base * $ratio--sml ** 4 * $lh--heading)
    margin-top var(--sp-ratio-power--four)
