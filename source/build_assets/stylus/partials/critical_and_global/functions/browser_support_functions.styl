*/
/*
    provides the fourth step up in the font-size scale.
    used for heading level one by default.
*/
fz-scale--plus-four()
    font-size ($fz--base * $ratio--sml ** 4)
    font-size var(--fz-ratio-power--four)
    +above(3)
        font-size ($fz--base * $ratio--med ** 4)
        font-size var(--fz-ratio-power--four)
    +above(6)
        font-size ($fz--base * $ratio--lrg ** 4)
        font-size var(--fz-ratio-power--four)
/*
    provides the third step up in the font-size scale.
    used for heading level two by default.
*/
